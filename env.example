# Configuración de Base de Datos
DB_HOST=db
DB_NAME=control_biblioteca
DB_USER=biblioteca_user
DB_PASS=biblioteca_pass
DB_ROOT_PASS=root_password
DB_PORT=3306

# Configuración de la Aplicación
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8080

# Configuración de Email (PHPMailer)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@biblioteca.com
MAIL_FROM_NAME="Sistema de Biblioteca"

# Configuración de Seguridad
APP_KEY=your_secret_key_here
SESSION_LIFETIME=120

# Configuración de Uploads
MAX_UPLOAD_SIZE=5M
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif

# Configuración de Logs
LOG_LEVEL=info
LOG_CHANNEL=file

# Configuración de Cache (futuro)
CACHE_DRIVER=file
CACHE_PREFIX=biblioteca

# Configuración de Sesiones
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=localhost
